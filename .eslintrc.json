{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {},
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": {
                "jest/globals": true
            },
            "plugins": [
                "jest"
            ]
        },
        {
            "files": ["./source/backend/funcions.js", "./source/frontend/connect4.js", "./source/backend/server.js"],
            "globals": {
                "board":"writable",
                "turnCount":"writable",
                "currentPlayer":"writable",
                "player1":"writable",
                "player2":"writable",
                "getBoard":"writable",
                "resetBoard":"writable",
                "isPositionTaken":"writable",
                "dropToBottom":"writable",
                "horizontalWinCheck":"writable",
                "verticalWinCheck":"writable",
                "gameEnd":"writable",
                "game":"writable",
                "setupEvents":"writable"
            }
        }
    ]

}
